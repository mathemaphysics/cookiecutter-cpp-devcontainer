{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 16,
        "patch": 0
    },
    "configurePresets": [
	{%- for config_name in cookiecutter.preset_configs.split('|') %}
	{
            "name": "{{ cookiecutter.project_slug }}-{{ config_name }}-configure",
            "displayName": "Unix Makefiles {{ config_name.capitalize() }} Configuration",
            "description": "{{ config_name.capitalize() }} configuration using Unix Makefiles generator",
            "generator": "Unix Makefiles",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "FETCHCONTENT_QUIET": "FALSE",
                "GIT_PROGRESS": "TRUE",
                "BUILD_TESTING": "TRUE"
            }
	} {%- if not loop.last %},{% endif %}
	{%- endfor %}
    ],
    "buildPresets": [
    	{%- for config_name in cookiecutter.preset_configs.split('|') %}
        {
            "name": "{{ cookiecutter.project_slug }}-{{ config_name }}-build",
            "displayName": "Unix Makefiles {{ config_name.capitalize() }} Build",
            "description": "{{ config_name.capitalize() }} build using Unix Makefiles generator",
            "configurePreset": "{{ cookiecutter.project_slug }}-{{ config_name }}-configure"
        } {%- if not loop.last %},{% endif %}
        {%- endfor %}
    ],
    "testPresets": [
    	{%- for config_name in cookiecutter.preset_configs.split('|') %}
        {
            "name": "{{ cookiecutter.project_slug }}-{{ config_name }}-test",
            "displayName": "Unix Makefiles {{ config_name.capitalize() }} Test",
            "description": "{{ config_name.capitalize() }} test using Unix Makefiles generator",
            "configurePreset": "{{ cookiecutter.project_slug }}-{{ config_name }}-configure",
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": true
            }
        } {%- if not loop.last %},{% endif %}
        {%- endfor %}
    ]
}

